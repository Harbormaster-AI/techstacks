#macro( Azure_Pipeline_Steps )
steps:
- script: docker run -d --name=harbormaster-test-postgres -e POSTGRES_DB=${appName}DB -e POSTGRES_USER=root -e POSTGRES_PASSWORD=letmein2 postgres
  displayName: 'installing latest postgres docker image'
- task: UseRubyVersion@0
  inputs:
    versionSpec: '>= 2.4'
    addToPath: true
- script: gem install rails && rails -v
  displayName: 'gem install rails'
- script: |
    CALL gem install bundler
    bundle install --retry=3 --jobs=4 --path vendor/bundle
  displayName: 'bundle install'
- script: bundle exec rake
  displayName: 'bundle exec rake'
- task: PublishTestResults@2
  condition: succeededOrFailed()
  inputs:
    testResultsFiles: '**/test-*.xml'
    testRunTitle: 'Ruby tests'
 #Azure_Pipeline_Docker_Steps()

#end##macro( Azure_Pipeline_Steps )